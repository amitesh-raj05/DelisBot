<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#373434"
    tools:context=".MainActivity">


    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100sp"
        android:max="100"
        android:progress="50"
        android:progressDrawable="@drawable/custom_seekbar_track"
        android:thumb="@drawable/custom_seekbar_thumb" />

    <TextView
        android:id="@+id/progressText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25sp"
        android:text="50%"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:paddingTop="10dp"/>

    <Button
        android:id="@+id/btnCenter"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:backgroundTint="#FFE75656"
        android:text="STOP"
        android:textSize="20sp"
        android:textColor="#050000"
        android:elevation="8dp" />

    <Button
        android:id="@+id/btnUp"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/btnCenter"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#fff"
        android:text="▲"
        android:textSize="30sp"
        android:textColor="#050000"
        android:elevation="8dp" />

    <Button
        android:id="@+id/btnDown"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btnCenter"
        android:layout_marginTop="20dp"
        android:backgroundTint="#fff"
        android:text="▼"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="#050000"
        android:elevation="8dp" />

    <Button
        android:id="@+id/btnLeft"
        android:layout_width="60dp"
        android:layout_height="120dp"
        android:layout_toLeftOf="@id/btnCenter"
        android:layout_alignTop="@id/btnCenter"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#fff"
        android:text="◀"
        android:textSize="30sp"
        android:textColor="#050000"
        android:elevation="8dp" />

    <Button
        android:id="@+id/btnRight"
        android:layout_width="60dp"
        android:layout_height="120dp"
        android:layout_toEndOf="@id/btnCenter"
        android:layout_alignTop="@id/btnCenter"
        android:layout_marginStart="20dp"
        android:backgroundTint="#fff"
        android:text="▶"
        android:textSize="30sp"
        android:textColor="#050000"
        android:elevation="8dp" />










</RelativeLayout>